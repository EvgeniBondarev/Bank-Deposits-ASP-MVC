@model Domains.Models.Operation

@{
    ViewData["Title"] = "Детали";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детали</h1>

<div>
    <h4>Операция</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Depositor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Depositor.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepositDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepositDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deposit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deposit.AdditionalConditions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepositAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepositAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsReturned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsReturned)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OperationId">Редактировать</a> 
    <a asp-action="Index">Назад к списку</a>
</div>
